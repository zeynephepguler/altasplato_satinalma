@using System.Xml
 
@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AltasPlato</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/altasplato_satinalma.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="@(Url.Content("~/digit.png"))"  />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
 
    <link href="https://unpkg.com/tabulator-tables@6.3.1/dist/css/tabulator_bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/tabulator.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/modules/edit/select.js"></script>
    <script src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/modules/filter/select.js"></script>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/luxon@2.3.1/build/global/luxon.min.js"></script>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/handsontable/dist/handsontable.full.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/handsontable/styles/handsontable.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/handsontable/styles/ht-theme-main.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        
      
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 4; 
        }

        
        body {
            padding-top: 60px; 
        }

       
        footer{
            z-index:3;
        }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu .dropdown-item {
            transition: background-color 0.3s, color 0.3s;
        }

            .dropdown-menu .dropdown-item:hover {
                background-color: #343A40; /* Daha koyu bir arka plan rengi */
                color: #CCCCCC; /* Daha az parlak bir yazı rengi */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-plato border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ALTAŞ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">--</a>
                        </li>                       
                       
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Plato">Plato</a>
                            </li>


                        <li class="nav-item dropdown" style="position: relative;">
                            <a class="nav-link dropdown text-light" href="#" id="satinalmaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #ffffff;">
                                Satın Alma
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="satinalmaDropdown" style="background-color: #212D3D; border: none; padding: 5px; border-radius: 5px;">
                                <li>
                                    <a class="dropdown-item text-plato" asp-area="" asp-controller="SatinAlma" asp-action="Index" style="color: #ffffff; padding: 10px; text-decoration: none;">
                                        Anasayfa
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider alert-light"></li>
                                <li>
                                    <a class="dropdown-item text-plato" asp-controller="SatinAlma" asp-action="YeniStokIstek" style="color: #ffffff; padding: 10px; text-decoration: none;">
                                        Talep İstek
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-plato" asp-controller="SatinAlma" asp-action="sOnay" style="color: #ffffff; padding: 10px; text-decoration: none;">
                                        Talep Takip
                                    </a>
                                </li>
                            </ul>
                        </li>
                       
                           
                        

                        
                    </ul>                        
                 </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
