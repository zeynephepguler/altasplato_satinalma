<div class="container mt-3">
    <h3>Ambalaj Türü Kontrolü</h3>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning">
            @TempData["Message"]
        </div>
    }

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th>Kart No</th>
                    <th>Ambalaj Türü</th>
                    <th>Son Giriş Tarihi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>@row.KartNo</td>
                        <td>@row.AmbalajTuru</td>
                        <td>@row.SonGirisTarih</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Yeni özel malzeme talebi yok.</p>
    }
</div>

   



  
  

