<div class="card shadow-sm mb-4" style="background-color: #ffffff;">
    <div class="card-header" style="background-color: #212d3d; color: #ffffff;">
      

        <h4>Verilen Sipariş Listesi</h4>
    </div>

    <div id="resultMessage" style="display: none;"></div>

    <div class="card-body">
        <!-- Sipariş İstek Butonu -->
        <!-- Sipariş İstek -->
        <form method="get" asp-controller="SatinAlma" asp-action="SiparisYonetim" style="display: inline-block; margin-right: 10px;">
            <button type="submit" class="btn btn-outline-primary"   title="Sipariş İstek">
                <i class="fas fa-list-alt"></i>
            </button>
        </form>

        <!-- Tüm Siparişler -->
        <form method="get" asp-controller="SatinAlma" asp-action="SiparisYonetimTermin" style="display: inline-block; margin-right: 10px;">
            <button type="submit" class="btn btn-outline-secondary"   title="Tüm Siparişler">
                <i class="fas fa-calendar-alt"></i>
            </button>
        </form>

        <!-- Kayıtlı Formlar -->
        <form method="get" asp-controller="SatinAlma" asp-action="KayitliSiparisForm" style="display: inline-block; margin-right: 10px;">
            <button type="submit" class="btn btn-outline-success"   title="Kayıtlı Formlar">
                <i class="fas fa-archive"></i>
            </button>
        </form>

        <!-- Sipariş Ekle -->
        <form method="post" asp-action="SiparisOlustur" asp-route-id="1" style="display: inline-block;" onsubmit="return confirm('Satın alma gerçekleştiyse devam ediniz');">
            <button type="submit" class="btn btn-outline-dark"   title="Sipariş Ekle">
                <i class="fas fa-plus-circle"></i>
            </button>
        </form>


        <table class="table">
            <thead>
                <tr>
                    <th><i class="fas fa-info-circle"></i> </th> <!-- Add a column for the status -->

@*                     <th><i class="fas fa-hashtag"></i> Form ID</th>
 *@                    <th><i class="fas fa-calendar-alt"></i> Termin Tarihi</th>
                    <th><i class="fas fa-box"></i> Malzeme Adı</th>
                    <th><i class="fas fa-box"></i> Tedarikci Adı</th>
                    <th><i class="fas fa-sort-numeric-up"></i> Talep Miktarı</th>
                    <th><i class="fas fa-cogs"></i>Birim Fiyat</th>
                    <th><i class="fas fa-info-circle"></i> Sipariş Tarihi</th>
                    <th><i class="fas fa-tools"></i> İşlemler</th>
                </tr>
            </thead>
            <tbody style="color: #212d3d;">
                @foreach (var talep in Model)
                {
                    <tr>
                        <td>
                            @{
                                var kalanGun = (talep.SiparisTerminTarihi - DateTime.Today).TotalDays;
                                string badgeClass;

                                if (kalanGun <= 3)
                                {
                                    badgeClass = "bg-danger"; // kırmızı - acil
                                }
                                else
                                {
                                    badgeClass = "bg-success"; // yeşil - zaman var
                                }
                            }

                            <span class="badge @badgeClass"> Termine kalan gün :@kalanGun
                                
                            </span>
                        </td>


                           


@*                         <td>@talep.Id</td>
 *@                        <td>@talep.SiparisTerminTarihi</td>
                        <td>@talep.UrunAdi</td>
                        <td>@talep.TedarikciAdi</td>
                        <td>@talep.UrunAdedi</td>
                        <td>@talep.BirimFiyat</td>
                        <td>@talep.SiparisTarihi</td>
                        <td>

                            <div class="dropdown">
                                <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                     ...
                                </button>
                                

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <form method="post" asp-action="SiparisSil" asp-route-id="@talep.SiparisID" onsubmit="return confirm('Siparişi iptal etmek istiyor musunuz?');">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="fas fa-trash"></i> Siparişi İptal Et
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                

                            </div>



                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

