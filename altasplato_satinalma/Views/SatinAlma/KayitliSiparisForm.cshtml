    @{
        var kartNoMessage = TempData["KartNoMessage"] as string;
    }
    <!-- Bildirimler -->
    <div class="col-2 text-center">
    <a href="@Url.Action("TreeBildirim", "SatinAlma")" style="text-decoration: none;">

    
        <div class="p-3" style="background-color: #212d3d; border: 1px solid #34495e; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); height: 100px;">
            <div class="d-flex align-items-center justify-content-center">
                <img src="~/TreeColor.png" alt="ThreeColor Logo" style="width: 140px; height:40px; object-fit: contain;">
                <h6 class="mt-2 ml-2" style="color: #212d3d;"> </h6>
