                           @*  <td>
                                <button class="btn btn-success btn-sm"><i class="fas fa-check"></i> Sipariş Et</button>
                                <button class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Düzenle</button>
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</button>
                            </td> *@
                        </tr>
                    }
                </tbody>
@*                 <button id="btnGorulduYap" class="btn btn-primary mt-2">Görüldü Yap</button>
 *@
            </table>
        </div>
    </div>
