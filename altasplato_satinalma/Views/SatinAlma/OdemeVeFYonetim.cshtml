 
@{
    ViewData["Title"] = "Depo";
}

@Html.Partial("_SASidebar")
 <h2 class="text-center" style="color: #212d3d;"><i class="fas fa-file-invoice"></i> Fatura Yönetimi</h2>

    <!-- Depo Ürün Listesi -->
<div class="mb-4" style="background-color: #ffffff; padding: 15px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="d-flex justify-content-start align-items-center">
       @*  <a asp-action="DepoYonetim" class="btn btn-outline-secondary" style="color: #212d3d; margin-right: 10px;"><i class="fas fa-boxes"></i> Depo Ürün Listesi</a>
        <a asp-action="DepoYonetimCikis" class="btn btn-outline-secondary" style="color: #212d3d; margin-right: 10px;"><i class="fas fa-boxes"></i> Depo Mal Çıkış</a>
        <a asp-action="DepoEk" class="btn btn-success" style="background-color: #27ae60; border: none; color: #ffffff;margin-right: 10px;">
            <i class="fas fa-plus"></i> Yeni Stok Ekle
        </a> *@
        @* <a asp-action="BekleyenStok" class="btn btn-success" style="background-color: #27ae60; border: none; color: #ffffff;margin-right: 10px;">
            <i class="fas fa-plus"></i> Bekleyen Stok Kartları
        </a> *@
    </div>
</div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
<table class="table">
    <thead>
        <tr>
            <th colspan="5" class="text-center">Faturadan</th> <!-- Grup başlık -->
            <th rowspan="2" class="text-center">Talep Eden</th>

            
            <th colspan="3" class="text-center">Depodan</th> <!-- Grup başlık -->
            <th rowspan="2">Faturalar</th>
        </tr>
        <tr>
            <th >Ürün Adı</th>
            <th>Sipariş Tarihi</th>
            <th >Onay Durumu</th>
            <th >Konum</th>
            <th >Not</th>
            <th>TedarikciAdi</th>
            <th>Açıklama</th>
            <th>Karar</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var siparis in Model)
        {
            <tr>
                <td>@siparis.UrunAdi</td>
                <td>@siparis.SiparisTarihi.ToString("yyyy-MM-dd")</td>
                <td>@siparis.OnayDurumu</td>
                <td>@siparis.Konum</td>
                <td>@siparis.SiparisNotu</td>
                <td>@siparis.TalepEden</td>

                <td>@siparis.TedarikciAdi</td>
                <td>@siparis.Aciklama</td>
                <td>@siparis.Karar</td>

                <td>
                    <!-- Dosya verisi varsa PDF indirme butonunu göster -->
                    @if (siparis.DosyaVerisi != null)
                    {
                        <a href="@Url.Action("DosyaGoster", "SatinAlma", new { siparisID = siparis.SiparisID })" class="btn btn-primary">
                            Dosyayı Görüntüle
                        </a>
                    }
                    else
                    {
                        <span>Dosya mevcut değil</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

  