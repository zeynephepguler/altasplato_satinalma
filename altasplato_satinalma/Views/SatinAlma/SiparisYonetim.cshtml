<script>
    $(document).ready(function () {

        // ... mevcut kodlarınız (btnTeklifBekle vb.)

        // Filtre inputlarına event ekle
        $('#malzemeAdiFilter, #tarihFilter').on('input change', function () {
            var malzemeFilter = $('#malzemeAdiFilter').val().toLowerCase();
            var tarihFilter = $('#tarihFilter').val(); // yyyy-mm-dd formatında

            $('table tbody tr').each(function () {
                var malzemeAdi = $(this).find('td').eq(2).text().toLowerCase(); // 3. sütun: Malzeme Adı
                var tarihText = $(this).find('td').eq(1).text(); // 2. sütun: Tarih (dd.MM.yyyy formatında)

                // Tarih texti yyyy-mm-dd formatına çevirelim filtre karşılaştırması için
                var tarihParts = tarihText.split('.');
                var tarihFormatted = '';
                if (tarihParts.length === 3) {
                    tarihFormatted = `${tarihParts[2]}-${tarihParts[1].padStart(2, '0')}-${tarihParts[0].padStart(2, '0')}`;
                }

                var malzemeMatch = malzemeAdi.indexOf(malzemeFilter) !== -1;
                var tarihMatch = tarihFilter === "" || tarihFormatted === tarihFilter;

                if (malzemeMatch && tarihMatch) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });

    });
</script>
